<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Términos de Referencia ElectroSur</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Google Fonts - Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.bootstrap5.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TRElectrosur.styles.css" asp-append-version="true" />
    
    <style>
        :root {
            --primary-color: #2a3c7d;
            --primary-light: #3a4c9d;
            --primary-dark: #1a2c6d;
            --secondary-color: #f8f9fa;
            --accent-color: #4392f1;
            --sidebar-width: 280px;
            --sidebar-collapsed-width: 70px;
            --topbar-height: 70px;
            --box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --transition-speed: 0.3s;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7ff;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: var(--topbar-height);
            padding-left: var(--sidebar-width);
            transition: all var(--transition-speed) ease;
            overflow-x: hidden;
        }
        
        body.sidebar-collapsed {
            padding-left: var(--sidebar-collapsed-width);
        }
        
        /* Para móviles, no aplicar padding-left */
        @@media (max-width: 992px) {
            body {
                padding-left: 0 !important;
            }
        }
        
        /* Topbar/Navbar */
        .topbar {
            height: var(--topbar-height);
            background-color: white;
            position: fixed;
            top: 0;
            right: 0;
            left: var(--sidebar-width);
            z-index: 1030;
            box-shadow: var(--box-shadow);
            transition: all var(--transition-speed) ease;
            display: flex;
            align-items: center;
            padding: 0 1.5rem;
        }
        
        body.sidebar-collapsed .topbar {
            left: var(--sidebar-collapsed-width);
        }
        
        .topbar .navbar-brand {
            display: flex;
            align-items: center;
        }
        
        .topbar .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }
        
        .toggle-sidebar-btn {
            background: none;
            border: none;
            color: var(--primary-color);
            font-size: 1.25rem;
            cursor: pointer;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.2s;
        }
        
        .toggle-sidebar-btn:hover {
            background-color: rgba(42, 60, 125, 0.1);
        }
        
        .topbar-divider {
            width: 0;
            border-right: 1px solid #e3e6f0;
            height: calc(var(--topbar-height) - 2rem);
            margin: auto 1rem;
        }
        
        .user-profile {
            display: flex;
            align-items: center;
            margin-left: auto;
            position: relative;
        }
        
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            margin-right: 0.5rem;
        }
        
        .user-name {
            font-weight: 500;
            color: #5a5c69;
            margin-right: 0.5rem;
        }
        
        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: var(--sidebar-width);
            z-index: 1090;
            background: linear-gradient(to bottom, var(--primary-color), var(--primary-dark));
            color: white;
            box-shadow: var(--box-shadow);
            transition: all var(--transition-speed) ease;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }
        
        body.sidebar-collapsed .sidebar {
            width: var(--sidebar-collapsed-width);
            transform: translateX(0);
        }
        
        .sidebar-brand {
            height: var(--topbar-height);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem;
            background-color: rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .sidebar-brand img {
            max-width: 100%;
            height: auto;
            max-height: 60px;
        }
        
        body.sidebar-collapsed .sidebar-brand img {
            display: none;
        }
        
        .sidebar-brand img {
            height: 35px;
            transition: all var(--transition-speed);
            margin-right: 10px;
        }
        
        body.sidebar-collapsed .sidebar-brand-text {
            display: none;
        }
        
        .sidebar-divider {
            border-top: 1px solid rgba(255, 255, 255, 0.15);
            margin: 0 1rem 1rem;
        }
        
        .sidebar-nav {
            flex: 1;
            overflow-y: auto;
            padding: 0;
            list-style: none;
            margin: 0;
        }
        
        .nav-item {
            margin-bottom: 0.25rem;
        }
        
        .nav-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            border-left: 4px solid transparent;
            transition: all 0.2s;
            white-space: nowrap;
        }
        
        .nav-link:hover, .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
            border-left-color: white;
        }
        
        .nav-icon {
            margin-right: 0.75rem;
            text-align: center;
            width: 1.5rem;
            font-size: 1.1rem;
        }
        
        body.sidebar-collapsed .nav-text {
            display: none;
        }
        
        .sidebar-footer {
            background-color: rgba(0, 0, 0, 0.1);
            padding: 1rem;
            font-size: 0.85rem;
            text-align: center;
            color: rgba(255, 255, 255, 0.6);
        }
        
        body.sidebar-collapsed .sidebar-footer {
            display: none;
        }
        
        .logout-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: auto;
            padding: 0.75rem 1.5rem;
            color: white;
            text-decoration: none;
            transition: all 0.2s;
            background-color: rgba(0, 0, 0, 0.2);
            border: none;
            cursor: pointer;
            width: 100%;
        }
        
        .logout-btn:hover {
            color: white;
            background-color: rgba(255, 0, 0, 0.3);
        }
        
        .logout-icon {
            margin-right: 0.75rem;
        }
        
        body.sidebar-collapsed .logout-text {
            display: none;
        }
        
        /* Main Content Area */
        .main-content {
            flex: 1;
            padding: 1.5rem;
            transition: all var(--transition-speed) ease;
        }
        
        .content-wrapper {
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: var(--box-shadow);
            padding: 1.5rem;
        }
        
        .page-title {
            margin-bottom: 1.5rem;
            color: var(--primary-color);
            font-weight: 600;
        }
        
        /* Footer */
        .footer {
            background-color: white;
            padding: 1rem 0;
            font-size: 0.85rem;
            color: #6c757d;
            box-shadow: 0 -1px 0 rgba(0, 0, 0, 0.05);
            margin-top: auto;
        }
        
        /* DataTables Custom Styling */
        .dataTables_wrapper .dataTables_length, 
        .dataTables_wrapper .dataTables_filter {
            margin-bottom: 1rem;
        }
        
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_paginate {
            margin-top: 1rem;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: var(--primary-color);
            color: white !important;
            border-color: var(--primary-color);
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: var(--primary-light);
            color: white !important;
            border-color: var(--primary-light);
        }
        
        /* Custom Buttons */
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .btn-primary:hover {
            background-color: var(--primary-light);
            border-color: var(--primary-light);
        }
        
        /* Responsive */
        @@media (max-width: 992px) {
            :root {
                --sidebar-width: 0;
            }
            
            body {
                padding-left: 0 !important;
            }
            
            body.sidebar-collapsed {
                padding-left: 0 !important;
            }
            
            .sidebar {
                transform: translateX(-100%);
                box-shadow: none;
                width: 270px;
            }
            
            .sidebar.show {
                transform: translateX(0);
                box-shadow: var(--box-shadow);
            }
            
            .topbar {
                left: 0 !important;
                width: 100%;
                padding-left: 60px; /* Espacio para el botón de toggle */
            }
            
            body.sidebar-collapsed .topbar {
                left: 0 !important;
            }
            
            .content-wrapper {
                overflow-x: auto;
            }
            
            /* Botón flotante para móviles */
            .mobile-toggle-btn {
                display: block;
                position: fixed;
                bottom: 20px;
                right: 20px;
                width: 50px;
                height: 50px;
                border-radius: 50%;
                background-color: var(--primary-color);
                color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
                z-index: 1100;
                border: none;
                cursor: pointer;
            }
            
            .mobile-toggle-btn:focus {
                outline: none;
            }
            
            .toggle-sidebar-btn {
                position: fixed;
                left: 10px;
                top: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <img src="~/images/LogoElectrosurBlanco.png" alt="ElectroSur Logo" height="100%;">
        </div>
        
        <hr class="sidebar-divider">
        
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="Index" asp-controller="TerminosReferencia" asp-action="Index">
                    <i class="fas fa-file-alt nav-icon"></i>
                    <span class="nav-text">Términos de Referencia</span>
                </a>
            </li>
            @if (Context.Session.GetInt32("RoleId") == 1)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="Index" asp-controller="Usuarios" asp-action="Index">
                        <i class="fas fa-users nav-icon"></i>
                        <span class="nav-text">Usuarios</span>
                    </a>
                </li>
            }
        </ul>
        
        <a href="/Home/Logout" class="logout-btn" style="color:white;">
            <i class="fas fa-sign-out-alt logout-icon"></i>
            <span class="logout-text" >Cerrar Sesión</span>
        </a>
        
    </div>
    
    <!-- Topbar -->
    <div class="topbar">
        <button class="toggle-sidebar-btn" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>
        
        <div class="topbar-divider"></div>
        
        <div class="navbar-brand">
            <span class="ml-2 text-gray-600">SGTR Electrosur</span>
        </div>
    </div>
    
    <!-- Botón flotante para móviles -->
    <button class="mobile-toggle-btn d-none d-md-none" id="mobileToggle">
        <i class="fas fa-bars"></i>
    </button>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>
    
    
    <!-- Core JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/responsive.bootstrap5.min.js"></script>
    
    <!-- DataTables Spanish -->
    <script>
        const dataTablesSpanish = {
            "sProcessing": "Procesando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
            "sZeroRecords": "No se encontraron resultados",
            "sEmptyTable": "Ningún dato disponible en esta tabla",
            "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
            "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sInfoPostFix": "",
            "sSearch": "Buscar:",
            "sUrl": "",
            "sInfoThousands": ",",
            "sLoadingRecords": "Cargando...",
            "oPaginate": {
                "sFirst": "Primero",
                "sLast": "Último",
                "sNext": "Siguiente",
                "sPrevious": "Anterior"
            },
            "oAria": {
                "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                "sSortDescending": ": Activar para ordenar la columna de manera descendente"
            },
            "buttons": {
                "copy": "Copiar",
                "colvis": "Visibilidad"
            }
        };
    </script>
    
    <!-- Custom JavaScript -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Variable para controlar el estado del sidebar
        let sidebarExpanded = true;
        
        // Función para contraer/expandir el sidebar
        function toggleSidebar() {
            sidebarExpanded = !sidebarExpanded;
            
            if (window.innerWidth < 992) {
                // En móvil, mostrar/ocultar el sidebar como overlay
                document.querySelector('.sidebar').classList.toggle('show', sidebarExpanded);
            } else {
                // En desktop, contraer/expandir el sidebar
                document.body.classList.toggle('sidebar-collapsed', !sidebarExpanded);
            }
            
            // Guardar la preferencia del usuario
            localStorage.setItem('sidebarExpanded', sidebarExpanded);
        }
        
        // Verificar tamaño de pantalla y configurar el sidebar
        function checkScreenSize() {
            const isMobile = window.innerWidth < 992;
            
            if (isMobile) {
                // En móvil, siempre empezar con el sidebar oculto
                sidebarExpanded = false;
                document.body.classList.remove('sidebar-collapsed');  // Quitar esta clase en móviles
                document.querySelector('.sidebar').classList.remove('show');
            } else {
                // En desktop, usar la preferencia del usuario
                const savedState = localStorage.getItem('sidebarExpanded');
                if (savedState !== null) {
                    sidebarExpanded = savedState === 'true';
                    document.body.classList.toggle('sidebar-collapsed', !sidebarExpanded);
                }
                document.querySelector('.sidebar').classList.remove('show');
            }
        }
        
        // Inicializar la aplicación cuando el DOM está listo
        document.addEventListener('DOMContentLoaded', function() {
            // Asignar eventos a los botones de toggle
            document.getElementById('sidebarToggle').addEventListener('click', function() {
                toggleSidebar();
            });
            
            // También asignar evento al botón móvil si existe
            const mobileToggleBtn = document.getElementById('mobileToggle');
            if (mobileToggleBtn) {
                mobileToggleBtn.addEventListener('click', function() {
                    toggleSidebar();
                });
            }
            
            // Configurar el sidebar según el tamaño de pantalla
            checkScreenSize();
            
            // Inicializar DataTables si existen en la página
            if (typeof $.fn.DataTable !== 'undefined' && $('.data-table').length > 0) {
                $('.data-table').DataTable({
                    responsive: true,
                    language: dataTablesSpanish
                });
            }
        });
        
        // Manejar los cambios de tamaño de ventana
        window.addEventListener('resize', function() {
            checkScreenSize();
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>