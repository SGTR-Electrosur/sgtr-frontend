@section Scripts {
    <!-- CKEditor 5 -->
    <script src="https://cdn.ckeditor.com/ckeditor5/37.1.0/classic/ckeditor.js"></script>

    <script>
        // Variables para los editores
        let editores = {};
        let tabActual = 0;
        const tabs = ['info-general-tab', 'alcances-tab', 'requisitos-tab', 'entregables-tab', 'condiciones-tab'];
        let esAprobado = @(esAprobado ? "true" : "false");

        $(document).ready(function () {
            // Inicializar CKEditor para los campos de texto enriquecido
            inicializarEditores();

            // Manejar la navegación entre pestañas
            configurarNavegacion();

            // Configurar los botones de acciones
            configurarBotones();

            // Cargar los datos de los campos
            cargarCampos();
        });

        function inicializarEditores() {
            // Lista de campos que necesitan editor WYSIWYG
            const camposEditor = [
                'finalidadPublica', 'objetivoContratacion', 'alcancesServicio', 'reglamentos',
                'seguros', 'prestacionesAccesorias', 'requisitosProveedor', 'experienciaProveedor',
                'perfilPersonal', 'formacionAcademica', 'experienciaPersonalClave', 'capacitacion',
                'otros', 'lugar', 'plazo', 'entregables', 'plazoLugar', 'conformidad',
                'sistemaContratacion', 'formaCondicionesPago', 'responsabilidad', 'otrasPenalidades',
                'medidasSeguridad', 'clausula', 'anexos'
            ];

            // Inicializar cada editor
            camposEditor.forEach(campo => {
                ClassicEditor.create(document.getElementById('editor_' + campo), {
                    toolbar: ['heading', '|', 'bold', 'italic', 'link', 'bulletedList', 'numberedList', 'blockQuote', 'insertTable', 'undo', 'redo']
                })
                    .then(editor => {
                        editores[campo] = editor;

                        // Si está aprobado, desactivar la edición
                        if (esAprobado) {
                            editor.isReadOnly = true;
                        }

                        // Actualizar el textarea oculto al cambiar el contenido
                        editor.model.document.on('change:data', () => {
                            document.getElementById('field_' + campo).value = editor.getData();
                        });
                    })
                    .catch(error => {
                        console.error(`Error al inicializar el editor ${campo}:`, error);
                    });
            });
        }

        function configurarNavegacion() {
            // Al cambiar de pestaña manualmente
            $('button[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                tabActual = tabs.indexOf(e.target.id);

                // Actualizar color de las pestañas
                $('button[data-bs-toggle="tab"]').css('color', '#495057');
                $(this).css('color', '#2a3c7d');
            });
        }

        function configurarBotones() {
            // Botón de enviar a revisión
            $('#btnEnviarRevision').on('click', function () {
                $('#modalEnviarRevision').modal('show');
            });

            // Confirmar envío a revisión
            $('#btnConfirmarEnviarRevision').on('click', function () {
                cambiarEstadoTDR(2); // Cambiar a "Pendiente de Revisión"
            });

            // Botón de enviar corrección
            $('#btnEnviarRevisionCorregida').on('click', function () {
                $('#modalEnviarCorrecion').modal('show');
            });

            // Confirmar envío de corrección
            $('#btnConfirmarEnviarCorreccion').on('click', function () {
                cambiarEstadoTDR(4); // Cambiar a "Pendiente de Revisión Corregida"
            });

            // Botón de cancelar revisión
            $('#btnCancelarRevision').on('click', function () {
                $('#modalCancelarRevision').modal('show');
            });

            // Confirmar cancelación de revisión
            $('#btnConfirmarCancelarRevision').on('click', function () {
                cambiarEstadoTDR(1); // Volver a "Borrador"
            });

            // Botón cargar versión
            $('#btnCargarVersion').on('click', function () {
                var versionId = $('#versionSelector').val();
                window.location.href = '@Url.Action("Editar", "TerminosReferencia", new { id = Model.TDRID })' + '?versionId=' + versionId;
            });
        }

        function cambiarEstadoTDR(nuevoEstadoId) {
            // Guardar primero los cambios
            guardarCampos().then(() => {
                // Luego enviar la solicitud para cambiar el estado
                $.ajax({
                    url: '@Url.Action("CambiarEstado", "TerminosReferencia", new { id = Model.TDRID })',
                    type: 'POST',
                    data: {
                        newStateId: nuevoEstadoId,
                        reason: ''
                    },
                    success: function (response) {
                        // Cerrar el modal correspondiente
                        $('.modal').modal('hide');

                        // Mostrar mensaje de éxito
                        showToast('Éxito', 'El estado del TDR ha sido actualizado', 'success');

                        // Recargar la página después de un breve retraso
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    },
                    error: function (xhr, status, error) {
                        // Mostrar mensaje de error
                        showToast('Error', 'No se pudo cambiar el estado del TDR', 'error');
                    }
                });
            });
        }

        function guardarCampos() {
            return new Promise((resolve, reject) => {
                // Preparar todos los datos de los editores
                for (const [campo, editor] of Object.entries(editores)) {
                    document.getElementById('field_' + campo).value = editor.getData();
                }

                // Convertir el formulario a un objeto FormData
                const formData = new FormData(document.getElementById('formEditarTDR'));

                // Enviar los datos mediante AJAX
                $.ajax({
                    url: $('#formEditarTDR').attr('action'),
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        resolve(response);
                    },
                    error: function (xhr, status, error) {
                        reject(error);
                    }
                });
            });
        }

        function cargarCampos() {
            // Obtener los campos del TDR para la versión actual
            $.ajax({
                url: '@Url.Action("ObtenerCampos", "TerminosReferencia", new { id = Model.TDRID, versionId = ViewBag.VersionActual })',
                type: 'GET',
                success: function (camposData) {
                    // Recorrer los campos recibidos y llenar los correspondientes campos en el formulario
                    camposData.forEach(campo => {
                        const fieldName = campo.FieldName;
                        const htmlContent = campo.HtmlContent || '';
                        const observacion = campo.lastReview && campo.lastReview.Comment ? campo.lastReview.Comment : '';

                        // Buscar el campo correspondiente
                        if (editores[fieldName]) {
                            // Para editores CKEditor
                            editores[fieldName].setData(htmlContent);
                            // Actualizar el textarea oculto también
                            document.getElementById('field_' + fieldName).value = htmlContent;
                        } else {
                            // Para campos de texto normal
                            const inputField = document.getElementById('field_' + fieldName);
                            if (inputField) {
                                inputField.value = htmlContent;
                            }
                        }

                        // Actualizar el campo de observación si existe
                        const fieldObservation = $(`#field_${fieldName}`).closest('.row').find('.text-danger').next('textarea');
                        if (fieldObservation.length > 0) {
                            fieldObservation.val(observacion);
                        }
                    });
                },
                error: function (xhr, status, error) {
                    console.error('Error al cargar los campos:', error);
                    showToast('Error', 'No se pudieron cargar los campos del TDR', 'error');
                }
            });
        }

        // Función para mostrar toast
        function showToast(title, message, type) {
            // Si ya existe un contenedor de toasts, úsalo; de lo contrario, créalo
            if ($('#toast-container').length === 0) {
                $('body').append('<div id="toast-container" class="position-fixed top-0 end-0 p-3" style="z-index: 1100;"></div>');
            }

            // Generar un ID único para el toast
            const toastId = 'toast-' + Date.now();

            // Definir la clase de estilo según el tipo de toast
            let bgClass = 'bg-primary';
            if (type === 'success') bgClass = 'bg-success';
            if (type === 'error') bgClass = 'bg-danger';
            if (type === 'warning') bgClass = 'bg-warning text-dark';

            // Crear el HTML del toast
            const toastHtml = `
                        <div id="${toastId}" class="toast align-items-center ${bgClass} text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">
                                    <strong>${title}</strong>: ${message}
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    `;

            // Añadir el toast al contenedor
            $('#toast-container').append(toastHtml);

            // Inicializar y mostrar el toast
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement, {
                delay: 5000
            });
            toast.show();
        }
    </script>
}
