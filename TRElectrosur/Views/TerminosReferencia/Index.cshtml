<!-- Modal para seleccionar tipo de TDR -->
<div class="modal fade" id="seleccionarTipoTDRModal" tabindex="-1" aria-labelledby="seleccionarTipoTDRModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-white" style="background-color: #2a3c7d;">
                <h5 class="modal-title" id="seleccionarTipoTDRModalLabel">Seleccione el Tipo de Término de Referencia</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="row g-4">
                    <!-- Tarjeta: Adquisición de bienes -->
                    <div class="col-md-6">
                        <a href="/TerminosReferencia/Create?tipo=1" class="text-decoration-none">
                            <div class="card h-100 shadow-sm tipo-tdr-card">
                                <div class="card-body text-center p-4">
                                    <div class="display-1 mb-3" style="color: #2a3c7d;">
                                        <i class="fas fa-shopping-cart"></i>
                                    </div>
                                    <h5 class="card-title fw-bold">Adquisición de bienes</h5>
                                    <p class="card-text text-muted">Para la compra de equipos, materiales y otros bienes.</p>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Tarjeta: Servicios Generales -->
                    <div class="col-md-6">
                        <a href="/TerminosReferencia/Create?tipo=2" class="text-decoration-none">
                            <div class="card h-100 shadow-sm tipo-tdr-card">
