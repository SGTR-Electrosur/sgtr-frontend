@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ElectroSur - Sistema de Gestión de Términos de Referencia</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #2a3c7d;
            --primary-light: #3a4c9d;
            --primary-dark: #1a2c6d;
            --secondary-color: #f8f9fa;
            --accent-color: #4392f1;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            overflow: hidden;
            background-color: #f5f7ff;
        }
        
        .login-container {
            height: 100vh;
            max-width: 100%;
        }
        
        .left-panel {
            background-image: url('https://images.unsplash.com/photo-1560179707-f14e90ef3623?q=80&w=2073&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            position: relative;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem;
        }
        
        .left-panel::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(42, 60, 125, 0.9) 0%, rgba(30, 43, 89, 0.95) 100%);
            z-index: 1;
        }
        
        .left-panel-content {
            position: relative;
            z-index: 2;
            color: white;
            max-width: 80%;
        }
        
        .left-panel h1 {
            font-weight: 700;
            margin-bottom: 1.5rem;
            font-size: 2.5rem;
        }
        
        .feature-item {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 1.25rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        
        .feature-item:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-5px);
        }
        
        .feature-icon {
            background-color: rgba(255, 255, 255, 0.2);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1.25rem;
        }
        
        .right-panel {
            background-color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            height: 100%;
            box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
            position: relative;
        }
        
        .login-form-container {
            width: 100%;
            max-width: 450px;
        }
        
        .logo-container {
            text-align: center;
            margin-bottom: 2.5rem;
        }
        
        .logo-container img {
            height: 80px;
            object-fit: contain;
        }
        
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(42, 60, 125, 0.1);
            padding: 2rem;
        }
        
        .form-floating {
            margin-bottom: 1.5rem;
        }
        
        .form-control {
            border-radius: 8px;
            padding: 0.75rem 1.25rem 0.75rem 3rem;
            border: 1px solid #e2e8f0;
            height: 58px;
            font-size: 1rem;
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(42, 60, 125, 0.25);
        }
        
        .form-floating label {
            padding: 0.75rem 1.25rem 0.75rem 3rem;
        }
        
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-control:focus ~ label {
            transform: scale(0.85) translateY(-0.75rem) translateX(0.15rem);
            opacity: 1;
        }
        
        .form-floating > .form-control::-webkit-input-placeholder {
            color: transparent;
        }
        
        .form-floating > .form-control::-moz-placeholder {
            color: transparent;
        }
        
        .form-floating > .form-control::placeholder {
            color: transparent;
        }
        
        .input-group-text {
            background-color: white;
            border-radius: 0 8px 8px 0;
            border-left: none;
            cursor: pointer;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            height: 54px;
            margin-top: 1rem;
        }
        
        .btn-primary:hover, .btn-primary:focus {
            background-color: var(--primary-light);
            border-color: var(--primary-light);
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(42, 60, 125, 0.25);
        }
        
        .login-footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            font-size: 0.85rem;
            color: #718096;
        }
        
        .login-heading {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .login-heading h2 {
            color: #2d3748;
            font-weight: 700;
            font-size: 1.75rem;
        }
        
        .login-heading p {
            color: #718096;
            margin-top: 0.75rem;
        }
        
        .form-check-label {
            color: #718096;
            font-size: 0.9rem;
        }
        
        .forgot-link {
            color: var(--primary-color);
            font-size: 0.9rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .forgot-link:hover {
            color: var(--primary-light);
            text-decoration: underline;
        }
        
        .custom-checkbox .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .form-check-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(42, 60, 125, 0.25);
        }
        
        .input-icon {
            position: absolute;
            display: flex;
            align-items: center;
            height: 58px;
            width: 58px;
            justify-content: center;
            z-index: 10;
        }
        
        .input-with-icon {
            padding-left: 3rem !important;
        }
        
        /* Decorative elements */
        .decoration-circle {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(67, 146, 241, 0.2), rgba(67, 146, 241, 0.1));
            z-index: 0;
        }
        
        .circle-1 {
            width: 300px;
            height: 300px;
            top: -150px;
            right: -100px;
        }
        
        .circle-2 {
            width: 200px;
            height: 200px;
            bottom: -100px;
            right: 50px;
        }
        
        /* Error mensaje */
        .alert-danger {
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }
        
        /* Responsive Adjustments */
        @@media (max-width: 991.98px) {
            .left-panel {
                display: none;
            }
            
            .right-panel {
                padding: 1.5rem;
            }
            
            body {
                background-image: linear-gradient(135deg, rgba(42, 60, 125, 0.9) 0%, rgba(30, 43, 89, 0.95) 100%), 
                                  url('https://images.unsplash.com/photo-1560179707-f14e90ef3623?q=80&w=2073&auto=format&fit=crop');
                background-size: cover;
                background-position: center;
                background-attachment: fixed;
            }
            
            .login-form-container {
                background-color: white;
                border-radius: 15px;
                padding: 1.5rem;
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            }
            
            .login-footer {
                color: white;
            }
        }

        /* Reducir el tamaño de las cards de tipos de TDR */
.tdr-type-card {
    max-width: 200px; /* Reducir el ancho máximo */
    margin: 0.5rem; /* Reducir los márgenes */
}

.tdr-type-card .card-body {
    padding: 1rem; /* Reducir el padding interno */
}

.tdr-type-card .card-title {
    font-size: 0.9rem; /* Reducir el tamaño del título */
    margin-bottom: 0.5rem; /* Reducir el margen inferior del título */
}

.tdr-type-card .card-text {
    font-size: 0.8rem; /* Reducir el tamaño del texto */
}

/* Asegurar que las cards se ajusten correctamente en pantallas pequeñas */
@@media (max-width: 992px) {
    .tdr-type-card {
        max-width: 100%; /* En pantallas pequeñas, ocupar todo el ancho disponible */
    }
}

/* Si estás usando flex o grid para mostrar las cards, asegurarte de que se ajusten al espacio */
.tdr-types-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}
    </style>
</head>
<body>
    <div class="container-fluid login-container">
        <div class="row h-100">
            <!-- Left Panel with Background Image -->
            <div class="col-lg-7 p-0 left-panel">
                <div class="left-panel-content">
                    <h1>Sistema de Gestión de Requerimientos de Contratos Menores</h1>
                    <p class="mb-5 lead">Plataforma integral para la gestión eficiente de términos de referencia para órdenes de servicio</p>
                    
                    <div class="features-list mt-5">
                        <div class="feature-item d-flex align-items-center">
                            <div class="feature-icon">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Gestión TDR</h5>
                                <p class="mb-0">Administración simplificada de términos de referencia</p>
                            </div>
                        </div>
                        
                        <div class="feature-item d-flex align-items-center">
                            <div class="feature-icon">
                                <i class="fas fa-tasks"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Seguimiento de Estado</h5>
                                <p class="mb-0">Monitoreo en tiempo real del proceso de revisión</p>
                            </div>
                        </div>
                        
                        <div class="feature-item d-flex align-items-center">
                            <div class="feature-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Optimización de Procesos</h5>
                                <p class="mb-0">Reducción de tiempos en la gestión de órdenes</p>
                            </div>
                        </div>

                      
                    </div>
                </div>
            </div>
            
            <!-- Right Panel - Login Form -->
            <div class="col-lg-5 p-0 right-panel">
                <div class="decoration-circle circle-1"></div>
                <div class="decoration-circle circle-2"></div>
                
                <div class="login-form-container z-index-1">
                    <div class="logo-container">
                        <img src="~/images/LogoElectrosur.png" alt="ElectroSur Logo" class="img-fluid">
                    </div>
                    
                    <div class="login-heading">
                        <h2>¡Bienvenido!</h2>
                        <p>Ingrese sus credenciales para acceder al sistema</p>
                    </div>
                    
                    <div class="card">
                        <div class="card-body">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            
                            <form asp-action="Login" asp-controller="Home" method="post">
                                <div class="mb-4 position-relative">
                                    <div class="input-icon">
                                        <i class="fas fa-envelope text-muted"></i>
                                    </div>
                                    <div class="form-floating">
                                        <input type="email" class="form-control input-with-icon" id="email" name="email" placeholder=" " required>
                                        <label for="email">Correo electrónico</label>
                                    </div>
                                </div>
                                
                                <div class="mb-4 position-relative">
                                    <div class="input-icon">
                                        <i class="fas fa-lock text-muted"></i>
                                    </div>
                                    <div class="form-floating">
                                        <input type="password" class="form-control input-with-icon" id="password" name="password" placeholder=" " required>
                                        <label for="password">Contraseña</label>
                                    </div>
                                </div>
                                
                                <button type="submit" class="btn btn-primary">
                                    Iniciar Sesión <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </form>
                            
                        </div>
                    </div>
                </div>
                
                <div class="login-footer">
                    © 2025 ElectroSur. Todos los derechos reservados.
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>